{
  "type": "module",
  "main": "dist/main/index.cjs",
  "scripts": {
    "build:renderer": "vite build",
    "build:main": "esbuild src/main/index.ts --bundle --platform=node --format=cjs --outfile=dist/main/index.cjs --external:electron",
    "build:preload": "esbuild src/preload/index.ts --bundle --platform=node --format=cjs --outfile=dist/preload/index.cjs --external:electron",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload",
    "dev": "npm run build && concurrently \"npm run server\" \"electron .\"",
    "start": "electron .",
    "server": "cd server && ts-node-esm index.ts",
    "server:watch": "cd server && tsc --watch"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^22.0.0",
    "@types/socket.io": "^3.0.0",
    "concurrently": "^8.2.2",
    "electron": "^32.0.0",
    "electron-builder": "^25.0.3",
    "esbuild": "^0.21.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.0",
    "vite": "^5.4.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.0",
    "phaser": "^3.80.1",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "uuid": "^13.0.0"
  }
}
